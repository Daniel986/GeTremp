<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/gs_li_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorMedGrey">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/gs_li_image"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:padding="5dp"
        android:src="@drawable/baseline_account_circle_white_48"/>

    <TextView
        android:id="@+id/gs_li_image_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/gs_li_image"
        android:layout_toStartOf="@id/gs_il_right_arrow"
        android:text="TEST"/>

    <ImageView
        android:id="@+id/gs_il_right_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/right_nav_arrow" />


</RelativeLayout>